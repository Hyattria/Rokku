    "gh-pages": "^3.1.0",
    "glob": "^7.1.6",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-router-dom": "^5.2.0",
    "typescript": "^4.0.5"
  },
  "browserslist": [
    "Android >= 4.0",
    "iOS >= 8"
