{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "pretty": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "rokku": ["src/index.tsx"],
      "rokku/es/*": ["src/*"]
    }
  },
  "include": ["src/**/*", ".eslintrc.js"]
}
